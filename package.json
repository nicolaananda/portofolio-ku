{
  "name": "vite_react_shadcn_ts",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development",
    "dev:prod": "vite --mode production",
    "build": "vite build --mode production",
    "build:dev": "vite build --mode development",
    "build:seo": "vite build --mode production && cp public/sitemap.xml dist/ && cp public/robots.txt dist/",
    "build:analyze": "vite build --mode production && npx vite-bundle-analyzer dist",
    "build:profile": "vite build --mode production --profile",
    "prerender": "node scripts/prerender.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview --port 5173",
    "preview:https": "vite preview --port 5173 --https",
    "seo:check": "echo 'üîç SEO Check - Visit these URLs to verify:' && echo 'üìç Sitemap: http://localhost:5173/sitemap.xml' && echo 'üìç Robots: http://localhost:5173/robots.txt'",
    "perf:audit": "npx lighthouse http://localhost:5173 --output=html --output-path=./lighthouse-report.html",
    "perf:build-size": "npm run build && npx bundlesize",
    "perf:deps": "npx depcheck",
    "analyze:bundle": "npx webpack-bundle-analyzer dist/assets",
    "optimize:images": "npx imagemin public/*.{jpg,png} --out-dir=public/optimized",
    "test:lighthouse": "npx lighthouse-ci collect --numberOfRuns=3",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:install": "npm run clean && npm install",
    "docker:up": "docker-compose --env-file docker.env up -d",
    "docker:down": "docker-compose --env-file docker.env down",
    "docker:logs": "docker-compose --env-file docker.env logs -f",
    "docker:build-serve": "npm run build && docker-compose --env-file docker.env up -d",
    "env:dev": "cp env.development .env",
    "env:prod": "cp env.production .env",
    "env:docker": "cp docker.env .env"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-aspect-ratio": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@tanstack/react-query": "^5.56.2",
    "caniuse-lite": "^1.0.30001718",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "date-fns": "^3.6.0",
    "framer-motion": "^12.15.0",
    "lucide-react": "^0.462.0",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.53.0",
    "react-resizable-panels": "^2.1.3",
    "react-router-dom": "^6.26.2",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "lovable-tagger": "^1.1.7",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.11",
    "terser": "^5.39.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1"
  }
}
